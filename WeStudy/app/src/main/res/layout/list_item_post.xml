<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <RelativeLayout
            android:id="@+id/listItem_post-rllTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/listItem_post-imgPin"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_pin"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/listItem_post-imgHidden"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/listItem_post-imgPin"
                android:layout_toEndOf="@id/listItem_post-imgPin"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_hidden"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/listItem_post-imgRequested"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/listItem_post-imgHidden"
                android:layout_toEndOf="@id/listItem_post-imgHidden"
                android:src="@drawable/ic_requested"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/listItem_post-tvPostName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@id/listItem_post-rllTags"
            android:text="Post name"/>
        <TextView
            android:id="@+id/listItem_post-tvCreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator"
            android:layout_below="@id/listItem_post-tvPostName"
            android:textSize="15sp"
            android:maxEms="14"
            android:ellipsize="end"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/listItem_post-tvLastUpdatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listItem_post-tvCreator"
            android:layout_toEndOf="@id/listItem_post-tvCreator"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_alignTop="@id/listItem_post-tvCreator"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="2017-11-14 16:11:28"/>

    </RelativeLayout>

</RelativeLayout>