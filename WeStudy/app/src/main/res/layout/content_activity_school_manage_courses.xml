<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pedro.westudy.school.ActivitySchoolManageCourses"
    tools:showIn="@layout/activity_school_manage_courses">

    <EditText
        android:id="@+id/activity_school_manage_courses-etFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lines="1"
        android:inputType="text"
        android:text=""
        android:hint="Filter"/>

    <ListView
        android:id="@+id/activity_school_manage_courses-lvCourses"
        android:layout_below="@id/activity_school_manage_courses-etFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
